{
  "compilerOptions": {
    // these options are not read by esbuild
    "moduleResolution": "nodenext",
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": false,
    "target": "es2021",
    "module": "NodeNext",
    "rootDir": "./src",
    "outDir": "./dist",
    "allowJs": true
  },
  "include": ["src/**/**.ts"],
  "exclude": ["node_modules"]
}
